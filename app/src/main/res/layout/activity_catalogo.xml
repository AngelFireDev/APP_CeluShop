<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.CatalogoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="45dp"
                android:ems="8"
                android:hint="@string/texto_buscar"
                android:textColor="@color/black"
                android:inputType="text"/>

            <Button
                android:id="@+id/btn_menu"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/background_activities"
                android:layout_marginStart="45dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/border_background"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/imagenProducto"
                    android:layout_width="150dp"
                    android:layout_height="135dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/redmi_note" />

                <TextView
                    android:id="@+id/tituloProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/text_imagen_2"/>

                <TextView
                    android:id="@+id/descripcionProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="@string/Texto_Prueba" />

                <TextView
                    android:id="@+id/precioProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/text_precio" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/border_background"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/imagenProducto_2"
                    android:layout_width="150dp"
                    android:layout_height="135dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/celular_tecno" />

                <TextView
                    android:id="@+id/tituloProducto_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/text_imagen"/>

                <TextView
                    android:id="@+id/descripcionProducto_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="@string/Texto_Prueba" />

                <TextView
                    android:id="@+id/precioProducto_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/text_precio" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/border_background"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/imagenProducto_3"
                    android:layout_width="150dp"
                    android:layout_height="135dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/celular_tecno" />

                <TextView
                    android:id="@+id/tituloProducto_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/text_imagen"/>

                <TextView
                    android:id="@+id/descripcionProducto_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="@string/Texto_Prueba" />

                <TextView
                    android:id="@+id/precioProducto_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/text_precio" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/border_background"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/imagenProducto_4"
                    android:layout_width="150dp"
                    android:layout_height="135dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/redmi_note" />

                <TextView
                    android:id="@+id/tituloProducto_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/text_imagen_2"/>

                <TextView
                    android:id="@+id/descripcionProducto_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="@string/Texto_Prueba" />

                <TextView
                    android:id="@+id/precioProducto_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/text_precio" />

            </LinearLayout>
        </LinearLayout>

        <!--<androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="182dp"
            android:layout_height="272dp"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
