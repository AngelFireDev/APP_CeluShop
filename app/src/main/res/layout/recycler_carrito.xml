<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".activities.CarritoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/border_background"
            android:elevation="4dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageProducto"
                    android:layout_width="125dp"
                    android:layout_height="118dp"
                    tools:background="@color/background_activities" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginEnd="25dp">

                <TextView
                    android:id="@+id/product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_imagen"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_test"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/btn_restar_carrito"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:textSize="20sp"
                        android:text="-" />

                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amount_test"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/btn_sumar_carrito"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:textSize="16sp"
                        android:layout_marginStart="10dp"
                        android:text="+" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/Trash"
                android:layout_width="32dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                app:srcCompat="@drawable/icono_basura"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>